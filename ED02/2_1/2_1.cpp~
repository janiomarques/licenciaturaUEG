#include <cstdlib>
#include <iostream>

using namespace std;

/*
 * 
 */
int main() {

    string nome;
    double nota1, nota2, media;
    std::setlocale(LC_ALL, "portuguese");
    std::cout << "Digite o nome do aluno: ";
    std::cin >> nome;

    std::cout << "Digite a nota da 1ª VA: ";
    std::cin >> nota1;

    std::cout << "Digite a nota da 2ª VA: ";
    std::cin >> nota2;

    
    media = (nota1 + nota2) / 2;
    std::cout << "\n \nO aluno " << nome << " obteve a média " << media << "\n \n";
    
    return 0;
}
